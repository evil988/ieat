<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Value </th>
      <th> Restaurant </th>
      <th colspan="3"></th>
    <tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.value %></td>
        <td><%= product.restaurant.name %></td>
      </tr>
      <% end %>
  </tbody>
</table>
